<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".card.GradeActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:text="Input a Grade"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_grading_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Current Grade:"
        android:textAlignment="center"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_grade_24"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:textSize="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/current_editTextNumber"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:hint="Enter Current Grade"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/current_textView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/goal_textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Goal Grade:"
        android:drawableLeft="@drawable/ic_baseline_trending_up_24"
        android:drawablePadding="8dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_textView" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:hint="Enter Goal"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/current_textView"
        app:layout_constraintTop_toBottomOf="@+id/current_editTextNumber" />


    <TextView
        android:id="@+id/scale_textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="GPA Scale:"
        android:drawableLeft="@drawable/ic_baseline_scale_24"
        android:drawablePadding="8dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_textView" />

    <EditText
        android:id="@+id/scale_editTextNumber"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Scale"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/current_textView"
        app:layout_constraintTop_toBottomOf="@+id/goal_textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:text="Save Parameters"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_save_24"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scale_editTextNumber" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:text="Required Grade"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_analytics_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Grade Needed for Goal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>